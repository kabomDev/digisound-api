{% extends "base.html.twig" %}
{% block title %}Digisound{% endblock %}
{% block body %}
    <h1 class="text-center m-3">Liste des artistes</h1>
    
    <div class="container">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">id</th>
                <th scope="col">Nom</th>
                <th scope="col">Description</th>
                <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                {% for artist in artists %}
                <th scope="row">{{artist.id}}</th>
                <td>{{artist.name}}</td>
                <td>{{artist.description}}</td>
                <td class="text-center">
                    <a href="{{path('artist_edit',{'id':artist.id})}}" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                    <a href="{{path('artist_delete',{'id':artist.id})}}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
                </tr>
                {% endfor %} 
            </tbody>
        </table>
         <div class="pagination">
            {{knp_pagination_render(artists)}}
         </div>

    </div>
    
{% endblock %}